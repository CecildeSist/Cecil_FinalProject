<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253BF5"
    tools:context=".ChooseTeamToUpdateActivity">

    <TextView
        android:id="@+id/chooseTeamUname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="USERNAME, please click on the team you want to update."
        android:textAlignment="center"
        android:textColor="#FDCE40"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lvChooseTeam"
        app:layout_constraintStart_toStartOf="@+id/lvChooseTeam"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvChooseTeam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnChooseTeam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseTeamUname" />

    <Button
        android:id="@+id/btnChooseTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FDCE40"
        android:text="I've changed my mind. Please take me back!"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvChooseTeam" />

</androidx.constraintlayout.widget.ConstraintLayout>