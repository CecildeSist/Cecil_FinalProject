<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253BF4"
    tools:context=".DeleteTeamActivity">

    <TextView
        android:id="@+id/deleteTeam_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="USERNAME, please click on the team you want to delete. Make sure you're sure about this!"
        android:textAlignment="textStart"
        android:textColor="#FE5151"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/delT_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I've changed my mind. Take me back, please!"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="659dp" />
</androidx.constraintlayout.widget.ConstraintLayout>