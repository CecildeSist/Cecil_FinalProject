<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253BF6">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Trainer:"
        android:textColor="#FC5151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chRUUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="USERNAME"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/chROne"
        app:layout_constraintStart_toEndOf="@+id/chROne" />

    <TextView
        android:id="@+id/chROne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKMN 1"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/chRTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:text="PKMN 2"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/chRUUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chRThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="44dp"
        android:text="PKMN 3"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chRFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKMN 4"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="@+id/chROne"
        app:layout_constraintTop_toBottomOf="@+id/chROne" />

    <TextView
        android:id="@+id/chRFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKMN 5"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="@+id/chRTwo"
        app:layout_constraintTop_toBottomOf="@+id/chRTwo" />

    <TextView
        android:id="@+id/chRSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKMN 6"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="@+id/chRThree"
        app:layout_constraintTop_toBottomOf="@+id/chRThree" />
</androidx.constraintlayout.widget.ConstraintLayout>