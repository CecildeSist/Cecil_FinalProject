<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253BF8"
    tools:context=".CreateTeamActivity">

    <TextView
        android:id="@+id/txtVCreate_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="sans-serif-black"
        android:text="USERNAME's New Team"
        android:textColor="#FE5151"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokémon 1"
        android:textColor="#FDCE40"
        app:layout_constraintBottom_toTopOf="@+id/spnVCreateTeam_pkmn1"
        app:layout_constraintStart_toStartOf="@+id/spnVCreateTeam_pkmn1" />

    <Spinner
        android:id="@+id/spnVCreateTeam_pkmn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokémon 2"
        android:textColor="#FDCE40"
        app:layout_constraintStart_toStartOf="@+id/spnVCreateTeam_pkmn1"
        app:layout_constraintTop_toBottomOf="@+id/spnVCreateTeam_pkmn1" />

    <Spinner
        android:id="@+id/spnVCreateTeam_pkmn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokémon 3"
        android:textColor="#FDCE40"
        app:layout_constraintStart_toStartOf="@+id/spnVCreateTeam_pkmn2"
        app:layout_constraintTop_toBottomOf="@+id/spnVCreateTeam_pkmn2" />

    <Spinner
        android:id="@+id/spnVCreate_pkmn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokémon 4"
        android:textColor="#FDCE40"
        app:layout_constraintStart_toStartOf="@+id/spnVCreate_pkmn3"
        app:layout_constraintTop_toBottomOf="@+id/spnVCreate_pkmn3" />

    <Spinner
        android:id="@+id/spnVCreate_pkmn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokémon 5"
        android:textColor="#FDCE40"
        app:layout_constraintStart_toStartOf="@+id/spnVCreate_pkmn4"
        app:layout_constraintTop_toBottomOf="@+id/spnVCreate_pkmn4" />

    <Spinner
        android:id="@+id/spnVCreateTeam_pkmn5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokémon 6"
        android:textColor="#FDCE40"
        app:layout_constraintStart_toStartOf="@+id/spnVCreateTeam_pkmn5"
        app:layout_constraintTop_toBottomOf="@+id/spnVCreateTeam_pkmn5" />

    <Spinner
        android:id="@+id/spnVCreate_pkmn6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/btnVCreateTeam_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:backgroundTint="#FCCD40"
        android:text="Go Back"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/btnVCreateTeam_createTeam"
        app:layout_constraintTop_toBottomOf="@+id/btnVCreateTeam_createTeam" />

    <Button
        android:id="@+id/btnVCreateTeam_createTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:backgroundTint="#FDCE40"
        android:text="Create Team"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnVCreate_pkmn6" />

</androidx.constraintlayout.widget.ConstraintLayout>