<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#253BF7"
    tools:context=".ChooseReviewActivity">

    <Button
        android:id="@+id/chooseRev_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="@color/yellow"
        android:text="I've changed my mind. I'd like to go back, please!"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chooseReview_list"
        app:layout_constraintTop_toBottomOf="@+id/chooseReview_list" />

    <ListView
        android:id="@+id/chooseReview_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toTopOf="@+id/chooseRev_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseRev_user" />

    <TextView
        android:id="@+id/chooseRev_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="USERNAME, please choose the team whose review you want to edit."
        android:textAlignment="textStart"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/chooseReview_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>